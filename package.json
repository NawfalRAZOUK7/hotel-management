{
  "name": "hotel-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "build": "echo 'No build step needed for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "lint:check": "eslint src/ tests/ --ext .js --max-warnings 0",
    "format": "prettier --write src/ tests/ *.js *.json *.md",
    "format:check": "prettier --check src/ tests/ *.js *.json *.md",
    "quality": "npm run lint:check && npm run format:check && npm run test:ci",
    "quality:fix": "npm run lint:fix && npm run format",
    "seed": "node src/scripts/seedDatabase.js",
    "seed:dev": "NODE_ENV=development node src/scripts/seedDatabase.js",
    "seed:test": "NODE_ENV=test node src/scripts/seedDatabase.js",
    "create-admin": "node src/scripts/createAdmin.js",
    "migrate": "node src/scripts/migrationScript.js",
    "backup": "node src/scripts/backupScript.js",
    "restore": "node src/scripts/restoreScript.js",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "logs:clear": "rm -rf logs/*.log",
    "clean": "rm -rf node_modules coverage logs/*.log uploads/temp/*",
    "clean:cache": "npm cache clean --force && rm -rf .jest-cache",
    "clean:all": "npm run clean && npm run clean:cache",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker build -t hotel-backend .",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level moderate",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:install": "npm ci",
    "prestart": "npm run quality:fix",
    "pretest": "npm run lint:check",
    "precommit": "npm run quality",
    "health": "node src/scripts/healthCheck.js",
    "monitor": "node src/scripts/monitorSystem.js",
    "production": "NODE_ENV=production npm start",
    "staging": "NODE_ENV=staging npm start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "html-pdf": "^3.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongodb": "^6.16.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "node-cron": "^4.1.0",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.7.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "babel-jest": "^30.0.0-beta.3",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1"
  }
}
